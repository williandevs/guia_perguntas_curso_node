
<%- include('partials/header.ejs') %> 


<body>

  <%- include('partials/navbar.ejs') %> 
 
    <div class="container">
      <hr>
      <h1><%= pergunta.titulo %> </h1>
      <p><%= pergunta.descricao %> </p>
      <hr>
        <form  method="POST" action="/responder">
            <h3 id="Resposta-titulo">Responda</h3>
            <hr>
            <label >Resposta</label>
           <textarea   class="form-control" placeholder="Digite sua Resposta" name="corpo" ></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
            <button type="submit" class="btn btn-primary">Responder</button>
          </form>

            <hr>
            <h3>Resposta</h3>
            <hr>
            <% respostas.forEach(resposta => { %>
              <br>
                  <div class="card">
                    <div class="card-body">
                      <p><%= resposta.corpo %> </p>
                    </div>
                  </div>
            <% }) %>
            <br><br>
     
    </div>
 
</body>

<%- include('partials/footer.ejs') %> 
